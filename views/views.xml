    <!-- Top menu item -->
    <menuitem name="Proyecto" id="proyecto_root"/>
    <!-- menu categories -->
    <menuitem name="Empresas" id="proyecto_1" parent="proyecto_root"  action="empresa_w"/>/>
    <menuitem name="Alumnos" id="proyecto_2" parent="proyecto_root" action="alumno_w"/> />

